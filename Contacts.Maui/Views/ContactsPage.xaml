<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Maui.Views.ContactsPage"
             Title="Contacts Page">

    <Grid 
        Padding="5"
        RowDefinitions="*,50" 
        ColumnDefinitions="1">

        <ListView 
         Grid.Row="0"
         Grid.Column="0"
        x:Name="listContacts"
        Background="Transparent"
        SeparatorColor="Crimson"
        RowHeight="65"
        ItemSelected="listContacts_ItemSelected"
        ItemTapped="listContacts_ItemTapped"
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                    TextColor="Chocolate"
                    DetailColor="Aquamarine" 
                    Detail="{Binding Email}" 
                    Text="{Binding Name}"
                    ></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button Grid.Row="1" Grid.Column="0" x:Name="btnAdd" Text="Add Contact" Clicked="btnAdd_Clicked"></Button>

    </Grid>


</ContentPage>